{
    "window.zoomLevel": 1,

    "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",

    "workbench.colorTheme": "Visual Studio Dark",
    "workbench.iconTheme": "material-icon-theme",

    "material-icon-theme.activeIconPack": "react",
	"material-icon-theme.hidesExplorerArrows": true,
	"material-icon-theme.showUpdateMessage": true,
	"material-icon-theme.folders.color": "#ec407a",
	"material-icon-theme.folders.associations": {
		".cache": "Database",
		"design_assets": "Custom",
		"design_files": "Custom",
		"node_modules": "Node",
		"public": "Public",
		"00_design_tokens": "Theme",
		"Border": "Theme",
		"Breakpoints": "Theme",
		"Colors": "Theme",
		"FocusVisible": "Theme",
		"Icon": "Theme",
		"Opacity": "Theme",
		"Shadow": "Theme",
		"Transition": "Theme",
		"Typography": "Theme",
		"ZIndex": "Theme",
		"01_atoms": "Cluster",
		"Button": "Cluster",
		"ExLink": "Cluster",
		"Image": "Cluster",
		"InLink": "Cluster",
		"NavLink": "Cluster",
		"SkipLink": "Cluster",
		"02_molecules": "App",
		"MenuDesktop": "App",
		"MenuMobile": "App",
		"03_organisms": "Components",
		"Footer": "Components",
		"Header": "Components",
		"04_templates": "Layout",
		"MainLayout": "Layout",
		"PageTemplate": "Layout",
		"PostTemplate": "Layout",
