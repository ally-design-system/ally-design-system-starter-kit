{
	"window.zoomLevel": 1,

	"terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",

	"workbench.colorTheme": "Visual Studio Dark",
	"workbench.iconTheme": "material-icon-theme",

	"material-icon-theme.activeIconPack": "react",
	"material-icon-theme.hidesExplorerArrows": true,
	"material-icon-theme.showUpdateMessage": true,
	"material-icon-theme.folders.color": "#ffd700",
	"material-icon-theme.folders.associations": {
		".cache": "Database",
		".storybook": "config",
		"design_assets": "Custom",
		"design_files": "Custom",
		"node_modules": "Node",
		"public": "Public",
		"00_design_tokens": "Theme",
		"001_layout": "Theme",
		"002_color_palette": "Theme",
		"003_peripherals": "Theme",
		"004_motion": "Theme",
		"005_iconography": "Theme",
		"006_typography": "Theme",
		"00_iconography": "Utils",
		"00_typography": "Font",
		"01_atoms": "Cluster",
		"02_molecules": "App",
		"03_organisms": "Components",
		"04_templates": "Layout",
		"05_pages": "Content",
		"06_posts": "Log",
		"07_images": "Images",
		"08_icons": "Svg",
		"09_utilities": "Pipe",
		"10_styles": "Sass"
	},
	"material-icon-theme.files.associations": {
		"*.js": "react"
	},

	"scss.lint.duplicateProperties": "warning",
	"scss.lint.unknownProperties": "warning",
	"scss.lint.unknownAtRules": "warning",
	"scss.lint.emptyRules": "warning",
	"scss.lint.important": "warning",
	"scss.validate": true,

	"html.format.endWithNewline": true,
	"html.format.indentInnerHtml": true,

	"files.associations": {
		"*.js": "javascriptreact"
	},

	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.formatOnPaste": true,
	"editor.formatOnSave": true,
	"editor.tabSize": 4,

	"prettier.trailingComma": "none",
	"prettier.arrowParens": "avoid",
	"prettier.printWidth": 60,
	"prettier.useTabs": true,
	"prettier.semi": false,

	"emmet.includeLanguages": {
		"javascript": "javascriptreact"
	}
}
